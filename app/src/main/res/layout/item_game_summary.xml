<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:padding="@dimen/half_dynamic_spacing"
  android:paddingHorizontal="@dimen/half_dynamic_spacing"
  android:paddingVertical="@dimen/half_static_spacing">

  <TextView
    android:id="@+id/created"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/half_static_spacing"
    tools:text="11/02/2021 12:00 PM"
    android:layout_weight="4"
    android:padding="@dimen/half_dynamic_spacing"
    android:textAlignment="viewStart"/>

  <TextView
    android:id="@+id/guess_count"
    android:layout_width="0dp"
    android:padding="@dimen/half_static_spacing"
    android:layout_weight="2"
    android:layout_height="wrap_content"
    tools:text="15"
    android:textAlignment="center"/>


  <TextView
    android:id="@+id/total_time"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/half_static_spacing"
    tools:text="12:30"
    android:layout_weight="2"
    android:padding="@dimen/half_static_spacing"
    android:textAlignment="center"/>


</LinearLayout>